<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enchanterswapna.androiddoodle.Maincam"
    tools:showIn="@layout/activity_maincam">

    <Button
        android:id="@+id/take_image_from_camera"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="takeImageFromCamera"
        android:layout_height="wrap_content"
        android:text="Take Photo From Camera"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/image_from_camera" />

    <ImageView
        android:id="@+id/image_from_camera"
        android:layout_width="200dp"

        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/take_image_from_camera"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp" />

</RelativeLayout>
